# -----------------------------------
# Réécriture pour React SPA
RewriteEngine On
RewriteBase /

# Ne rien faire si l'URL est exactement index.html
RewriteRule ^index\.html$ - [L]

# Si le fichier ou le dossier existe, le serveur le sert normalement
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Sinon, redirige vers index.html pour que React gère la route
RewriteRule . index.html [L]

# -----------------------------------
# Compression des fichiers pour vitesse
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript application/json image/svg+xml
</IfModule>

# -----------------------------------
# Cache des fichiers statiques pour performance

<IfModule mod_expires.c>
  ExpiresActive On

  # Images fingerprintées et WebP (cache long 1 an)
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"

  # CSS / JS fingerprintés (cache long 1 an)
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"

  # Fonts
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"

  # Fichiers sans hash (index.html, favicon) → cache court
  ExpiresByType text/html "access plus 1 hour"
  ExpiresByType image/x-icon "access plus 1 week"
</IfModule>

<IfModule mod_headers.c>
  # Cache long + immutable pour assets fingerprintés
  <FilesMatch "\.(css|js|gif|jpe?g|png|webp|svg|woff2?)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # Cache court pour fichiers non fingerprintés
  <FilesMatch "^(index\.html|favicon\.ico)$">
    Header set Cache-Control "public, max-age=3600"
  </FilesMatch>
</IfModule>

# -----------------------------------
# Sécurité de base
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
</IfModule>

# -----------------------------------
# SEO / Robots
<IfModule mod_headers.c>
  Header set X-Robots-Tag "all"
</IfModule>
